
<div class="flex flex-col items-center my-10">

  <% @groups.each_with_index do |group, index| %>
    <div class="flex bg-slate-50 group-card rounded p-4 mt-4">
      <%= image_tag group.icon, alt: 'icon', class: "w-40" %>

      <div class="ml-5">
        <p><%= group.name %></p>
        <p class="mt-14"><%= group.created_at.strftime('%d %h %Y') %></p>
      </div>

      <p class="ml-12">$<%= @total_amount[index] %> </p>
    </div>
  <% end %>

  <%= link_to 'Add new category', new_group_path, class: "bg-sky-400 p-2 rounded text-slate-50 mt-6" %>
</div>