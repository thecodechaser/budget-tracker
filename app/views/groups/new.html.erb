<div class="flex flex-col items-center my-20">
  <h3 class="text-sky-400 text-xl font-bold mb-6"> Add a new category</h3>
  <%= form_with url: groups_path, scope: :group do |form| %>
    <div>
    <%= form.label :Name %><br>
    <%= form.text_field :name, class: 'mt-2 w-56 p-1', require: true %>
    </div>

    <div class="mt-2">
    <%= form.label :icon_link %><br>
    <%= form.text_field :icon, class: 'mt-2 w-56 p-1', require: true %>
    </div>

    <%= form.submit "Submit", class: "bg-sky-400 p-2 rounded text-slate-50 mt-4" %>
  <% end %>
</div>